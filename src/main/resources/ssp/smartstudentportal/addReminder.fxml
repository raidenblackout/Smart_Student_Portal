<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="addReminderPopup" prefHeight="114.0" prefWidth="491.0" stylesheets="@../../reminder.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ssp.smartstudentportal.addReminderController">
   <children>
      <HBox alignment="CENTER_LEFT" fillHeight="false" prefHeight="76.0" prefWidth="600.0" spacing="10.0">
         <children>
            <TextField fx:id="content" prefHeight="25.0" prefWidth="272.0" promptText="Add a reminder" />
            <DatePicker fx:id="date" prefHeight="25.0" prefWidth="170.0" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER" prefHeight="39.0" prefWidth="600.0" spacing="20.0">
         <children>
            <Button mnemonicParsing="false" onAction="#AddReminder" prefHeight="17.0" prefWidth="93.0" text="Add Reminder" textFill="WHITE">
               <font>
                  <Font size="11.5" />
               </font></Button>
            <Button mnemonicParsing="false" text="Cancel" textFill="WHITE">
               <font>
                  <Font size="11.5" />
               </font></Button>
         </children>
      </HBox>
   </children>
</VBox>

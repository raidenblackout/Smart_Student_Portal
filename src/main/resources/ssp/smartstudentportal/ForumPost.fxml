            <StackedFontIcon prefHeight="78.0" prefWidth="71.0">
               <children>
                  <FontIcon fill="#000000de" fontSmoothingType="LCD" iconColor="#00000089" iconLiteral="fa-circle" iconSize="50" stroke="#ffffff00" wrappingWidth="48.28571319580078" />

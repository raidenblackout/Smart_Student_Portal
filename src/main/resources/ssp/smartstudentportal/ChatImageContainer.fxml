<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ssp.smartstudentportal.ChatImageContainer">
   <children>
      <HBox fx:id="imageContainer" alignment="CENTER" style="-fx-background-color: grey; -fx-background-radius: 25;" HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </HBox.margin>
      </HBox>
      <VBox translateX="-15.0" translateY="5.0">
         <children>
            <FontIcon iconLiteral="far-times-circle" onMouseClicked="#onClickCancel">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></FontIcon>
         </children>
      </VBox>
   </children>
</HBox>
